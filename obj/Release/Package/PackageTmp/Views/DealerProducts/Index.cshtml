@model IEnumerable<SkyFan.Models.DealerProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Products List
<button type="submit" rel="tooltip" title="New Product" class="btn btn-primary btn-round btn-just-icon " onclick="location.href='@Url.Action("Create", "DealerProducts")'">
    <i class="material-icons">playlist_add</i>
    <div class="ripple-container"></div>
</button>
    </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dealer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dealer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <button type="button" rel="tooltip" title="Edit" class="btn btn-primary btn-simple btn-xs" onclick="location.href='@Url.Action("Edit", "DealerProducts" , new { id=item.ID })'">
                <i class="material-icons">edit</i>
            </button>

            <button type="button" rel="tooltip" title="Details" class="btn btn-success btn-simple btn-xs" onclick="location.href='@Url.Action("Details", "DealerProducts" , new { id=item.ID })'">
                <i class="material-icons">list</i>
            </button>
            <button type="button" rel="tooltip" title="Delete" class="btn btn-danger btn-simple btn-xs" onclick="location.href='@Url.Action("Delete", "DealerProducts" , new { id=item.ID })'">
                <i class="material-icons">close</i>
            </button>
        </td>
    </tr>
}

</table>
